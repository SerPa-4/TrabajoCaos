#Primer diagrama
### overlay of map and vectors
reset session
	# si queremos cambiar el formato de salida a latex usar epslatex

set terminal png
set output 'b=1.174'

# Crea el mapa de gradiente con numero de cuadros =1000 y lo guarda en $data

set samples 1000
set isosamples 1000
set table $Data
    plot "phase_portrait.txt" u 1:2:5 w table
unset table

#Creamos otra variable para intar los vectores 
#set samples 100
#set isosamples 100
#
set table $Vectors
    plot "flechitas.txt" u 1:2:3:4 notitle w table
unset table

#TITULO DEL GRAFICO 
set title '{/:Bold Retrato de fase b=1.174}' font ",18"

#AJUSTE EJE X
set xlabel "{/:Bold x1}"
show xlabel
set xrange[0:1]

#AJUSTE EJE Y
set ylabel "{/:Bold x2}" 
show ylabel
set yrange [0:1]

#Para pintar las lineas de las nullclinas en este caso solo sirve para b=1.12
#set arrow from 1,0 to 0,0.7692307692 nohead front
#set arrow from 0,1 to 0.7692307692,0  nohead front

#Para pintar los puntos 
#set object circle at graph 0,1 radius char 1 front \
#    fillcolor rgb 'black' fillstyle solid noborder
#set object circle at graph 1,0 radius char 1 front \
#    fillcolor rgb 'black' fillstyle solid noborder

set palette defined ( 0 'white', 1 'green', 3 'blue' )

#PINNTAMOS 

plot $Data w image, \
     $Vectors u 1:2:3:4 w vec filled head lc rgb "black" notitle
### end of code

##############################################

